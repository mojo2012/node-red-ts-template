{
  "name": "node-red-ts-template",
  "version": "1.0.0",
  "description": "A node-red-ts template",
  "main": "index.js",
  "scripts": {
    "clean": "rm -Rf ./dist/*",
    "test": "jest",
    "watch": "npm run clean && concurrently -k npm:watch-*",
    "watch-ts": "concurrently \"tsc -w\" \"tsc-alias -w\"",
    "watch-html": "npx copy-and-watch --watch src/nodes/*.html dist/nodes",
    "build": "tsc && tsc-alias && npm run copy:resources",
    "copy:resources": "(cd src; find ./nodes -name '*.html' | cpio -pdm ../dist) && cp package.json dist/ && cp README.md dist/",
    "launch": "node --env-file=.env --expose-gc --inspect=0.0.0.0:19229 node_modules/node-red/red.js --userDir ./data",
    "debug": "concurrently -k \"npm run watch\" && \"node --env-file=.env --expose-gc --inspect=0.0.0.0:19229 node_modules/node-red/red.js --userDir ./data \"",
    "deploy": "npm run build && (cd dist; npm publish)",
    "eslint:check": "eslint . --ext .ts",
    "eslint:check:errors-only": "eslint . --ext .ts --quiet",
    "eslint:fix": "eslint . --ext .ts --fix"
  },
  "files": [
    "**/*"
  ],
  "node-red": {
    "version": ">=3.1.0",
    "nodes": {
      "DummyNode": "nodes/DummyNode.js"
    }
  },
  "keywords": [
    "node-red"
  ],
  "dependencies": {
    "node-red-ts": "^1.0.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.11.36",
    "@types/node-red": "^1.3.5",
    "@types/node-red__editor-client": "^1.1.0",
    "@types/node-red-node-test-helper": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^9.1.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-modules-newline": "^0.0.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-sonarjs": "^0.14.0",
    "eslint-visitor-keys": "^3.3.0",
    "jest": "^29.7.0",
    "node-red": "^4.0.9",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  }
}
